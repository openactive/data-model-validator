{
  "type": "Offer",
  "sameAs": null,
  "derivedFrom": "http://schema.org/Offer",
  "hasId": true,
  "idFormat": "http://schema.org/url",
  "sampleId": "https://example.com/offer/",
  "requiredFields": [
    "name",
    "price",
    "priceCurrency",
    "availabilityStarts",
    "availabilityEnds"
  ],
  "recommendedFields": [
    "acceptedPaymentMethod",
    "eligibleCustomerType"
  ],
  "inSpec": [
    "id",
    "type",
    "name",
    "description",
    "price",
    "priceCurrency",
    "availabilityStarts",
    "availabilityEnds",
    "acceptedPaymentMethod",
    "eligibleCustomerType"
  ],
  "fields": {
    "acceptedPaymentMethod": {
      "fieldName": "acceptedPaymentMethod",
      "requiredType": "ArrayOf#http://schema.org/url",
      "example": [
        "http://purl.org/goodrelations/v1#Cash",
        "http://purl.org/goodrelations/v1#PaymentMethodCreditCard"
      ],
      "description": [
        "The payment method(s) accepted by seller for this offer. The payment methods should be expressed as URLs within the [GoodRelations scheme](http://www.heppnetz.de/ontologies/goodrelations/v1#PaymentMethod)"
      ]
    },
    "availabilityEnds": {
      "fieldName": "availabilityEnds",
      "sameAs": "http://schema.org/availabilityEnds",
      "requiredType": "http://schema.org/DateTime",
      "example": "2014-04-29T12:14:35Z",
      "description": [
        "The end of the availability of the activity included in the offer."
      ]
    },
    "availabilityStarts": {
      "fieldName": "availabilityStarts",
      "sameAs": "http://schema.org/availabilityStarts",
      "requiredType": "http://schema.org/DateTime",
      "example": "2014-04-29T12:14:35Z",
      "description": [
        "The beginning of the availability of the activity included in the offer."
      ]
    },
    "description": {
      "fieldName": "description",
      "sameAs": "http://schema.org/description",
      "requiredType": "http://schema.org/Text",
      "example": "Winger space for Speedball.",
      "description": [
        "A description for the activity included in the offer."
      ]
    },
    "eligibleCustomerType": {
      "fieldName": "eligibleCustomerType",
      "example": "TODO",
      "description": [
        "The type(s) of customers for which the given offer is valid."
      ]
    },
    "name": {
      "fieldName": "name",
      "sameAs": "http://schema.org/name",
      "requiredType": "http://schema.org/Text",
      "example": "Speedball winger position",
      "description": [
        "A human readable name for the offer."
      ]
    },
    "price": {
      "fieldName": "price",
      "sameAs": "http://schema.org/price",
      "requiredType": "http://schema.org/Text",
      "example": "33.00",
      "description": [
        "The offer price of the activity.",
        "This price should be specified without currency symbols and as a string representation of a floating point number with two decimal places.",
        "The currency of the price should be expressed in the priceCurrency field."
      ]
    },
    "priceCurrency": {
      "fieldName": "priceCurrency",
      "sameAs": "http://schema.org/priceCurrency",
      "requiredType": "http://schema.org/Text",
      "example": "GBP",
      "description": [
        "The currency (in 3-letter ISO 4217 format) of the price."
      ]
    }
  }
}
