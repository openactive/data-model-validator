{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "jasmine": true
  },
  "globals": {
    "expectAsync": true
  },
  "rules": {
    "max-len": "off",
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "no-return-await": 0,
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "isFieldTargeted",
          "isModelTargeted",
          "validateRawSync",
          "validateModel",
          "validateField",
          "validateFieldSync"
        ]
      }
    ]
  }
}
